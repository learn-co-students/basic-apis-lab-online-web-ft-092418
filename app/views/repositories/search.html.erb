<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% if @repos %>
    <% @repos.each do |repo| %>
      <h3><%= repo["name"] %>
      <ul>
        <li><%= repo["description"] %></li>
        <li><%= link_to repo["html_url"], repo["html_url"] %></li><br>
      </ul>
    <% end %>
  <% end %>
</div>

