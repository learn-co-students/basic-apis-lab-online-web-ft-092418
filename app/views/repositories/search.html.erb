<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @error %>
  <%= @error %>
<% elsif @repositories %>
  <ul>
  <%= @repositories.each do |r| %>
    <li>
      <%= r["name"] %> <br>
      <%= link_to r["html_url"], r["html_url"] %> <br>
      <%= r["description"] %>
    </li>
  <% end %>
  </ul>
<% end %>



